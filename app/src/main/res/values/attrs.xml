<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="QuizCard">
        <attr name="image" format="reference" />
        <attr name="question" format="string"/>
    </declare-styleable>

    <declare-styleable name="QuizCardText">
        <attr name="answer" format="string" />
    </declare-styleable>

    <declare-styleable name="QuizCardMultipleChoice">
        <attr name="answerA" format="string" />
        <attr name="answerAIsCorrect" format="boolean" />
        <attr name="answerB" format="string" />
        <attr name="answerBIsCorrect" format="boolean" />
        <attr name="answerC" format="string" />
        <attr name="answerCIsCorrect" format="boolean" />
        <attr name="answerD" format="string" />
        <attr name="answerDIsCorrect" format="boolean" />
    </declare-styleable>

</resources>